{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "cds serve with dotenvx",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "dotenvx",
      "args": [
        "run",
        "--",
        "cds",
        "watch",
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
    {
      "name": "cds serve",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "cds",
      "args": [
        "serve",
        "--with-mocks",
        "--in-memory?"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
  ]
}
